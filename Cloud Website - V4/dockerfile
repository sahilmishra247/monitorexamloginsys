# Use prebuilt image that includes dlib + face_recognition
FROM facefusion/face-recognition:latest
# Environment config
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

# Install system packages needed for audio (librosa), video (cv2), and security
RUN apt-get update && apt-get install -y \
    ffmpeg \
    libsndfile1 \
    libgl1 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    ca-certificates \
    git \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy rest of your application
COPY . .

# Expose whatever port your Flask app runs on
EXPOSE 5000

# Start your app with Gunicorn
CMD ["gunicorn", "--bind", "0.0.0.0:5000", "app:app"]
